<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <p><%= customers.length %> clientes cadastrados!</p>
    <table>
      <thead>
        <tr>
          <td>Nome</td>
          <td>Idade</td>
          <td>Região</td>
          <td>Ações</td>
        </tr>
      </thead>
      <tbody>
        <% customers.forEach(item => { %>
        <tr>
          <%= item.name %> <%= item.idade %> <%= item.cidade %><%= item.uf %>
          <%= item.ações %>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
