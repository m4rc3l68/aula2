<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <p><%= customers.length %> clientes cadastrados!</p>
    <table>
      <thead>
        <tr>
          <td>Nome</td>
          <td>Idade</td>
          <td>Região</td>
          <td>Uf</td>
          <td>Ações</td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% customers.forEach(item => { %>
          <td>
            <a href="/edit/<%= item._id %>" title="Editar">
              <%= item.nome %>
            </a>
          </td>
          <td><%= item.idade %></td>
          <td><%= item.cidade %></td>
          <td><%= item.uf %></td>
          <td>
            <a href="/edit/<%= item._id %>" title="Editar">
              <img src="/images/Edit.png" alt="NodeJS" />
            </a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <hr />
    <a href="/new">Cadastrar Novo</a>
  </body>
</html>
